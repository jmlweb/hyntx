{
  "name": "hyntx",
  "version": "0.0.1",
  "description": "CLI that analyzes Claude Code prompts and generates improvement suggestions",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "size": "npm pack --dry-run 2>&1 | tail -1",
    "prepare": "pnpm build"
  },
  "keywords": [
    "cli",
    "claude",
    "prompts",
    "analysis",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^25.0.3",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8"
  },
  "bin": {
    "hyntx": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "date-fns": "^4.1.0",
    "figlet": "^1.9.4",
    "glob": "^13.0.0",
    "ora": "^9.0.0",
    "prompts": "^2.4.2"
  }
}
